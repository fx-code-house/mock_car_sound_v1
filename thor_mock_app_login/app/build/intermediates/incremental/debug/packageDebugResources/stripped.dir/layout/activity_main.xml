                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_cmd_74"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#1abc9c"
                    android:enabled="false"
                    android:text="74 读取canbin信息"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_114_canbin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#1abc9c"
                    android:enabled="false"
                    android:text="74 写入canbin"
                    android:textColor="#ffffff" />
                <!-- 音效包音量控制区域 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="#34495e"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="🎵 音效包音量控制"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_volume_control"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#f39c12"
                    android:enabled="false"
                    android:text="打开音量控制面板"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_read_volumes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#e74c3c"
                    android:enabled="false"
                    android:text="读取当前音量设置"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_reset_volumes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#9b59b6"
                    android:enabled="false"
                    android:text="重置为默认音量"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_clear_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#95a5a6"
                    android:text="清空日志"
                    android:textColor="#ffffff" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>