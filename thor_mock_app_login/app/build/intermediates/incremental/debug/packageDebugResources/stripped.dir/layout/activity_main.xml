                <!--                    android:textColor="#ffffff" />-->

                <Button
                    android:id="@+id/btn_cmd_58"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#e74c3c"
                    android:enabled="false"
                    android:text="58 读取设备设置"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_59"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#3498db"
                    android:enabled="false"
                    android:text="59 写入设备设置"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_128"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#e74c3c"
                    android:enabled="false"
                    android:text="128 开始上传"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_129"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#3498db"
                    android:enabled="false"
                    android:text="129 读取上传块"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_130"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#9b59b6"
                    android:enabled="false"
                    android:text="130 停止上传"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#e67e22"
                    android:enabled="false"
                    android:text="12 设备锁定/解锁控制"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_56"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#1abc9c"
                    android:enabled="false"
                    android:text="56 读取通用数据参数"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_69"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#1abc9c"
                    android:enabled="false"
                    android:text="69 选择/激活预设"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_71"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#8e44ad"
                    android:enabled="false"
                    android:text="71 读取已安装音效包"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_117"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#1abc9c"
                    android:enabled="false"
                    android:text="117 获取下载状态"
                    android:textColor="#ffffff" />

                <!--                <Button-->
                <!--                    android:id="@+id/btn_cmd_112"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginBottom="12dp"-->
                <!--                    android:backgroundTint="#1abc9c"-->
                <!--                    android:enabled="false"-->
                <!--                    android:text="112 开始下载组"-->
                <!--                    android:textColor="#ffffff" />-->

                <!--                <Button-->
                <!--                    android:id="@+id/btn_cmd_113"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginBottom="12dp"-->
                <!--                    android:backgroundTint="#1abc9c"-->
                <!--                    android:enabled="false"-->
                <!--                    android:text="113 开始下载文件"-->
                <!--                    android:textColor="#ffffff" />-->

                <Button
                    android:id="@+id/btn_cmd_114_sample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#1abc9c"
                    android:enabled="false"
                    android:text="114 写入下载块-sample"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_114_smprl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#1abc9c"
                    android:enabled="false"
                    android:text="114 写入下载块-smprl"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_114_pkgrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#1abc9c"
                    android:enabled="false"
                    android:text="114 写入下载块-pkgrl"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cmd_114_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#e67e22"
                    android:enabled="false"
                    android:text="🎵 一键下载所有文件 (smprl+pkgrl+sample)"
