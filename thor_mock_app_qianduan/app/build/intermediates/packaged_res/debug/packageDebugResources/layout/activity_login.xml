<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3A47">

    <!-- Top 1/3 Container with Car Image and ALPHAX Logo -->
    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <!-- Car Image Background -->
        <ImageView
            android:id="@+id/car_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_background"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:maxHeight="250dp" />

        <!-- ALPHAX Text Logo at Bottom Center of Car Image -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alphax_text_logo"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="120dp"
            android:layout_alignBottom="@id/car_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

    <!-- Login Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_container"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="40dp"
        android:layout_marginTop="60dp">

        <!-- Google Sign In Button -->
        <RelativeLayout
            android:id="@+id/google_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_google_login"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Google Icon with Background (Left) -->
            <FrameLayout
                android:id="@+id/google_icon_frame"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/icon_background_white" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/google_icon"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginStart="4dp" />
            </FrameLayout>

            <!-- Google Text (Center) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sign in with Google"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </RelativeLayout>

        <!-- Apple Sign In Button -->
        <RelativeLayout
            android:id="@+id/apple_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_apple_login_gray"
            android:clickable="true"
            android:focusable="true">

            <!-- Apple Icon with Background (Left) -->
            <FrameLayout
                android:id="@+id/apple_icon_frame"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/icon_background_white" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/apple_icon"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginStart="4dp" />
            </FrameLayout>

            <!-- Apple Text (Center) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sign in with Apple"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>