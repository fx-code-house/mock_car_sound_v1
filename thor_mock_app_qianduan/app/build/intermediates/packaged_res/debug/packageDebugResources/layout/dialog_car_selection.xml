<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2C3A47"
    android:padding="25dp">

    <!-- 头部区域 -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="25dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="车辆选择"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 关闭按钮 -->
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_close"
            android:contentDescription="关闭" />

    </RelativeLayout>

    <!-- 选择区域 -->
    <LinearLayout
        android:id="@+id/selection_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:layout_above="@id/confirm_button"
        android:orientation="vertical">

        <!-- 品牌选择 -->
        <LinearLayout
            android:id="@+id/brand_selection_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4A5568"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="品牌："
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/selected_brand_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请选择品牌"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

        <!-- 车型选择 -->
        <LinearLayout
            android:id="@+id/model_selection_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4A5568"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="车型："
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/selected_model_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请选择车型"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

        <!-- 世代选择 -->
        <LinearLayout
            android:id="@+id/generation_selection_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4A5568"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="世代："
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/selected_generation_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请选择世代"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

        <!-- 系列选择 -->
        <LinearLayout
            android:id="@+id/series_selection_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4A5568"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="25dp"
            android:clickable="true"
            android:focusable="true">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="系列："
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/selected_series_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请选择系列"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    </LinearLayout>

    <!-- 确认按钮 -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_complete"
        android:text="确认选择"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>